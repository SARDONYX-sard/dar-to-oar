{
  "name": "dar-to-oar",
  "version": "0.7.0",
  "license": "MIT",
  "homepage": "https://github.com/SARDONYX-sard/dar-to-oar",
  "private": true,
  "scripts": {
    "dev": "tauri dev",
    "dev:front": "next ./dar2oar_gui/frontend",
    "build": "rimraf ./dar2oar_gui/frontend/out && tauri build",
    "build:front": "next build ./dar2oar_gui/frontend",
    "build:icons": "cargo tauri icon ./dar2oar_gui/backend/icons/icon.png",
    "test": "vitest run",
    "test:back": " cargo test --workspace",
    "test:all": "npm test && npm run test:back",
    "fmt": "biome format ./ && prettier --cache --write \"**/*.+(yml|yaml)\" --ignore-path ./.gitignore && cargo fmt --all",
    "lint": "next lint ./dar2oar_gui/frontend && biome lint ./ && cargo clippy --workspace",
    "lint:fix": "npm run fmt && next lint ./dar2oar_gui/frontend --fix && biome check --apply ./  && cargo clippy --workspace --fix --allow-staged --allow-dirty",
    "tauri": "tauri"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@mui/icons-material": "^5.15.18",
    "@mui/lab": "5.0.0-alpha.170",
    "@mui/material": "^5.15.18",
    "@tanstack/react-query": "^5.40.0",
    "@tauri-apps/api": "^1.5.6",
    "i18next": "^23.11.5",
    "monaco-vim": "^0.4.1",
    "next": "14.2.3",
    "notistack": "^3.0.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.51.5",
    "react-i18next": "^14.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@tauri-apps/cli": "^1.5.14",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/node": "20.12.12",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "typescript": "5.4.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "1.6.0"
  },
  "overrides": {
    "monaco-editor": "^0.49.0"
  }
}
