{
  "name": "dar-to-oar",
  "version": "0.8.0",
  "license": "MIT",
  "homepage": "https://github.com/SARDONYX-sard/dar-to-oar",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "dev:front": "next ./gui/frontend",
    "build": "rimraf ./gui/frontend/out && tauri build",
    "build:front": "next build ./gui/frontend",
    "build:icons": "cargo tauri icon ./gui/backend/icons/icon.png",
    "test": "vitest run",
    "test:back": " cargo test --workspace",
    "test:all": "npm test && npm run test:back",
    "fmt": "biome format ./ && prettier --cache --write \"**/*.+(yml|yaml)\" --ignore-path ./.gitignore && cargo fmt --all",
    "lint": "next lint ./gui/frontend && biome lint ./ && cargo clippy --workspace",
    "lint:fix": "npm run fmt && next lint ./gui/frontend --fix && biome check --write ./  && cargo clippy --workspace --fix --allow-staged --allow-dirty",
    "tauri": "tauri"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@mui/icons-material": "6.1.0",
    "@mui/lab": "6.0.0-beta.9",
    "@mui/material": "6.1.0",
    "@tauri-apps/api": "1.6.0",
    "i18next": "23.15.1",
    "next": "14.2.12",
    "notistack": "^3.0.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.53.0",
    "react-i18next": "15.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.1",
    "@tauri-apps/cli": "1.6.2",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "16.0.1",
    "@types/node": "22.5.5",
    "@types/react": "18.3.7",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.12",
    "jsdom": "25.0.0",
    "prettier": "3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "5.6.2",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "2.1.1"
  },
  "overrides": {
    "monaco-editor": "^0.49.0"
  },
  "packageManager": "npm@10.8.1"
}
